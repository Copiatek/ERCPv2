<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Copiatek ERCP{% endblock %}</title>
        
        {% block bootstrap %}
            <link href="{{ asset('bootstrap/stylesheet/bootstrap.css') }}" rel="stylesheet"/>
            <link href="{{ asset('bootstrap/test.css') }}" rel="stylesheet"/>
            <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
		{% endblock %}
        
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block navbar %}
        <nav class="navbar navbar-default navbar-gradient">
          <div class="container-fluid">
            <div class="container">
            <div class="navbar-collapse collapse">
                {% block navlist %}
                  {#
                  <li><a href="/"><img height="28" src="{{ asset('images/logos/header-logoGlow.png') }}"></a></li>
                  <li><a href="{{ path('tnt') }}">Track & Trace</a></li>
                  <li><a href="#">Meld & Registratie</a></li>
                  <li><a href="#">Klanten</a></li>
                  <li><a href="#">Track & Trace</a></li>
                  #}
                  {{ knp_menu_render('AppBundle:Builder:createMainMenu', {'currentClass': 'active', 'allow_safe_labels': true}) }}
                {% endblock %}
            </div>
            </div>
          </div>
        </nav>
        {% endblock %}
        <div class="container">
            <ol class="breadcrumb">
                {% block breadcrumb %}
                <li>Start</li>
                <li>Homepagina</li>
                {% endblock %}
            </ol>
            {% block body %}
            <h2>Welkom op het nieuwe ERCP Systeem!</h2>
            {% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
